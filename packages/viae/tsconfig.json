{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,    
    "declaration": true,
    "sourceMap": false,  
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../pb/tsconfig.json"
    },
  ]
}