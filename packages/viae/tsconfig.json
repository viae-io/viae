{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "newLine": "LF",
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,    
    "declaration": true,
    "sourceMap": false,  
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ], 
    "types": [
      "@types/node",
      "@types/mocha",
      "@types/chai"
    ]
  },
  "include": [
    "src/**/*", "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../pb/tsconfig.json"
    },
  ]
}