{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    
    },
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "/test/**/*.spec.ts"
      ],
      "cwd": "${workspaceRoot}"
    }
  ]
}